# keybindings
# launch shortcut
bindsym $alt+b exec google-chrome --proxy-server="socks5://127.0.0.1:1080"
# rename workspace
bindsym $alt+r exec i3-input -F 'rename workspace to "%s"' -P 'New name for this workspace: '
# move window to scratchpad and show windows in scratchpad
bindsym $alt+semicolon exec ~/.bin/i3/i3_mark_scratchpad.sh
bindsym $sup+semicolon [con_mark="^scratchpad666"] scratchpad show
# show hide simplenote
bindsym $sup+n [con_mark="^scratchpad666" class="Simplenote"] scratchpad show
# show hide ss-qt5
bindsym $sup+s [con_mark="^scratchpad666" class="shadowsocks-qt5"] scratchpad show
# show hide post-man
bindsym $sup+p [con_mark="^scratchpad666" title="Postman"] scratchpad show
# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart

# lock scripts
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
      bindsym l exec --no-startup-id ~/.bin/i3exit lock, mode "default"
      bindsym e exec --no-startup-id ~/.bin/i3exit logout, mode "default"
      bindsym s exec --no-startup-id ~/.bin/i3exit suspend, mode "default"
      bindsym h exec --no-startup-id ~/.bin/i3exit hibernate, mode "default"
      bindsym r exec --no-startup-id ~/.bin/i3exit reboot, mode "default"
      bindsym Shift+s exec --no-startup-id ~/.bin/i3exit shutdown, mode "default"

      # back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
}
bindsym $alt+Shift+e mode "$mode_system"

# screenshot
set $mode_capture Capture (s) select, (f) full, (w) window, (a) active, (m) menu, (t) tooltip
mode "$mode_capture" {
      bindsym s exec --no-startup-id shutter -s, mode "default"
      bindsym f exec --no-startup-id shutter -f, mode "default"
      bindsym w exec --no-startup-id shutter -w, mode "default"
      bindsym a exec --no-startup-id shutter -a, mode "default"
      bindsym m exec --no-startup-id shutter -m, mode "default"
      bindsym t exec --no-startup-id shutter -t, mode "default"

      # back to normal: Enter or Escape
      bindsym Return mode "default"
      bindsym Escape mode "default"
}
bindsym $alt+c mode "$mode_capture"

